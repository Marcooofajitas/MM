import turtle
import time

# Configuraci√≥n inicial
turtle.speed(1)
turtle.pensize(2)
turtle.color("red")

# Mensaje animado
turtle.penup()
turtle.goto(-50, 0)
turtle.pendown()

for _ in range(2):
    turtle.circle(50, 180)
    time.sleep(0.5)
    turtle.circle(50, -180)
    time.sleep(0.5)

turtle.hideturtle()
turtle.done()
